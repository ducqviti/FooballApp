<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="@color/backgound_app" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="0.5dp"
        android:color="#cac2c2" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
    android:left="3dp"
    android:top="3dp"
    android:right="3dp"
    android:bottom="3dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="3dp" >
    </corners>

</shape>